<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
<!-- This will direct request to base path /catalog to show login page -->
<welcome-file-list>
<welcome-file>form.html</welcome-file>
</welcome-file-list>
<!-- Enter your servlet definitions and servlet mappings below -->
	<servlet>
		<servlet-name>formServlet</servlet-name>
		<servlet-class>views.FormServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>formServlet</servlet-name>
		<url-pattern>/form-servlet</url-pattern>
	</servlet-mapping>
</web-app>